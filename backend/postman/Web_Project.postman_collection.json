		{
			"name": "Create conversation, Get conversation, Create message, Get Messages",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generate unique usernames using timestamps\r",
							"const user1 = {\r",
							"  username: `user1_${Date.now()}`,\r",
							"  password: 'password1'\r",
							"};\r",
							"\r",
							"const user2 = {\r",
							"  username: `user2_${Date.now()}`,\r",
							"  password: 'password2'\r",
							"};\r",
							"\r",
							"// Save the unique usernames to environment variables for later use\r",
							"pm.environment.set('user1_username', user1.username);\r",
							"pm.environment.set('user2_username', user2.username);\r",
							"\r",
							"// Function to handle user registration\r",
							"function registerUser(user, callback) {\r",
							"  pm.sendRequest({\r",
							"    url: 'http://localhost:3000/auth/register',\r",
							"    method: 'POST',\r",
							"    header: 'Content-Type: application/json',\r",
							"    body: {\r",
							"      mode: 'raw',\r",
							"      raw: JSON.stringify(user)\r",
							"    }\r",
							"  }, callback);\r",
							"}\r",
							"\r",
							"// Function to handle user login\r",
							"function loginUser(user, callback) {\r",
							"  pm.sendRequest({\r",
							"    url: 'http://localhost:3000/auth/login',\r",
							"    method: 'POST',\r",
							"    header: 'Content-Type: application/json',\r",
							"    body: {\r",
							"      mode: 'raw',\r",
							"      raw: JSON.stringify(user)\r",
							"    }\r",
							"  }, callback);\r",
							"}\r",
							"\r",
							"// Register User 1\r",
							"registerUser(user1, function (err, res) {\r",
							"  if (err) {\r",
							"    console.log('Error registering user1:', err);\r",
							"  } else {\r",
							"    console.log('User1 registered:', res.json());\r",
							"\r",
							"    // Register User 2\r",
							"    registerUser(user2, function (err, res) {\r",
							"      if (err) {\r",
							"        console.log('Error registering user2:', err);\r",
							"      } else {\r",
							"        console.log('User2 registered:', res.json());\r",
							"\r",
							"        // Login User 1\r",
							"        loginUser(user1, function (err, res) {\r",
							"          if (err) {\r",
							"            console.log('Error logging in user1:', err);\r",
							"          } else {\r",
							"            const jsonData = res.json();\r",
							"            const token = jsonData.access_token;\r",
							"            pm.environment.set('accessToken', token);\r",
							"            pm.environment.set('user1_id', jsonData.id); // Save user1 ID\r",
							"          }\r",
							"        });\r",
							"      }\r",
							"    });\r",
							"  }\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Validate response structure for createConversation\r",
							"pm.test(\"Validate the structure of the created conversation object\", function () {\r",
							"  const jsonData = pm.response.json();\r",
							"  \r",
							"  pm.expect(jsonData).to.be.an('object');\r",
							"  pm.expect(jsonData.data.createConversation).to.be.an('object');\r",
							"  pm.expect(jsonData.data.createConversation.id).to.be.a('string');\r",
							"  pm.expect(jsonData.data.createConversation.users).to.be.an('array');\r",
							"  \r",
							"  jsonData.data.createConversation.users.forEach(function(user) {\r",
							"    pm.expect(user).to.be.an('object');\r",
							"    pm.expect(user.id).to.be.a('string');\r",
							"    pm.expect(user.username).to.be.a('string');\r",
							"  });\r",
							"});\r",
							"\r",
							"// Get the created conversation ID\r",
							"const jsonData = pm.response.json();\r",
							"const conversationId = jsonData.data.createConversation.id;\r",
							"pm.environment.set('conversationId', conversationId);\r",
							"\r",
							"// Create a message in the conversation\r",
							"pm.sendRequest({\r",
							"  url: 'http://localhost:3000/graphql',\r",
							"  method: 'POST',\r",
							"  header: {\r",
							"    'Content-Type': 'application/json',\r",
							"    'Authorization': `Bearer ${pm.environment.get('accessToken')}`\r",
							"  },\r",
							"  body: {\r",
							"    mode: 'graphql',\r",
							"    graphql: {\r",
							"      query: `\r",
							"        mutation {\r",
							"          createMessage(content: \"Hello!\", conversationId: \"${conversationId}\") {\r",
							"            id\r",
							"            content\r",
							"          }\r",
							"        }\r",
							"      `\r",
							"    }\r",
							"  }\r",
							"}, function (err, res) {\r",
							"  if (err) {\r",
							"    console.log('Error creating message:', err);\r",
							"  } else {\r",
							"    console.log('Message created:', res.json());\r",
							"\r",
							"    // Validate response structure for createMessage\r",
							"    pm.test(\"Validate the structure of the created message object\", function () {\r",
							"      const responseData = res.json();\r",
							"\r",
							"      pm.expect(responseData).to.be.an('object');\r",
							"      pm.expect(responseData.data.createMessage).to.be.an('object');\r",
							"      pm.expect(responseData.data.createMessage.id).to.be.a('string');\r",
							"      pm.expect(responseData.data.createMessage.content).to.be.a('string');\r",
							"    });\r",
							"\r",
							"    // Get messages in the conversation\r",
							"    pm.sendRequest({\r",
							"      url: 'http://localhost:3000/graphql',\r",
							"      method: 'POST',\r",
							"      header: {\r",
							"        'Content-Type': 'application/json',\r",
							"        'Authorization': `Bearer ${pm.environment.get('accessToken')}`\r",
							"      },\r",
							"      body: {\r",
							"        mode: 'graphql',\r",
							"        graphql: {\r",
							"          query: `\r",
							"            query {\r",
							"              getMessages(conversationId: \"${conversationId}\") {\r",
							"                id\r",
							"                content\r",
							"                user {\r",
							"                  username\r",
							"                }\r",
							"              }\r",
							"            }\r",
							"          `\r",
							"        }\r",
							"      }\r",
							"    }, function (err, res) {\r",
							"      if (err) {\r",
							"        console.log('Error getting messages:', err);\r",
							"      } else {\r",
							"        console.log('Messages retrieved:', res.json());\r",
							"\r",
							"        // Validate response structure for getMessages\r",
							"        pm.test(\"Validate the structure of the retrieved messages\", function () {\r",
							"          const responseData = res.json();\r",
							"          \r",
							"          pm.expect(responseData).to.be.an('object');\r",
							"          pm.expect(responseData.data.getMessages).to.be.an('array');\r",
							"          responseData.data.getMessages.forEach(function(message) {\r",
							"            pm.expect(message).to.be.an('object');\r",
							"            pm.expect(message.id).to.be.a('string');\r",
							"            pm.expect(message.content).to.be.a('string');\r",
							"            pm.expect(message.user).to.be.an('object');\r",
							"            pm.expect(message.user.username).to.be.a('string');\r",
							"          });\r",
							"        });\r",
							"      }\r",
							"    });\r",
							"  }\r",
							"});\r",
							"\r",
							"// Response status and time checks\r",
							"pm.test(\"Response status code is 200\", function () {\r",
							"  pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response time is less than 300ms\", function () {\r",
							"  pm.expect(pm.response.responseTime).to.be.below(300);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{accessToken}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "graphql",
					"graphql": {
						"query": "mutation {\r\n  createConversation(username1: \"{{user1_username}}\", username2: \"{{user2_username}}\") {\r\n    id\r\n    users {\r\n      id\r\n      username\r\n    }\r\n  }\r\n}\r\n",
						"variables": ""
					}
				},
				"url": {
					"raw": "http://localhost:3000/graphql",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"graphql"
